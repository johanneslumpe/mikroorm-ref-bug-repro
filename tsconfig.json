{
  "compilerOptions": {
    "module": "Node16",
    "target": "es2020",
    "lib": ["es2020"],
    "moduleResolution": "Node16",
    "declaration": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "ignoreDeprecations": "5.0",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "./src"
  }
}
